// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  CORPORATE
  INNOVATOR
  ADMIN
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  name      String?
  role      Role      @default(INNOVATOR)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  corporateProjects PilotProject[] @relation(name: "CorporateProjects")
  innovatorProjects PilotProject[] @relation(name: "InnovatorProjects")
  innovations       Innovation[]
}

model Innovation {
  id          String    @id @default(uuid())
  title       String
  description String?
  ownerId     String
  category    String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  owner User @relation(fields: [ownerId], references: [id])
}

model PilotProject {
  id          String    @id @default(uuid())
  title       String
  description String?
  corporateId String
  innovatorId String
  status      String    @default("Pending")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  corporate User @relation(name: "CorporateProjects", fields: [corporateId], references: [id])
  innovator User @relation(name: "InnovatorProjects", fields: [innovatorId], references: [id])
}
